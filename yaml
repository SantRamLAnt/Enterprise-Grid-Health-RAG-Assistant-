# kubernetes-deployment.yaml (for scalability)
apiVersion: apps/v1
kind: Deployment
metadata:
  name: grid-rag-assistant
spec:
  replicas: 3
  selector:
    matchLabels:
      app: grid-rag
  template:
    metadata:
      labels:
        app: grid-rag
    spec:
      containers:
      - name: app
        image: your-docker-image
        ports:
        - containerPort: 8501
        - containerPort: 8000
        env:
        - name: PINECONE_API_KEY
          value: "your_key"
        - name: XAI_API_KEY
          value: "your_key"
        # Add more env vars
